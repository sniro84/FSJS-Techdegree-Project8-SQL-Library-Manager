extends layout.pug
block content
    h1 New Book
    form(action='/books/new' method='POST')
        if(errors)
            h2.error Oooops!
            ul.error
            each error in errors
                li.error=error.text
        p
            label(for='title') Title
            if(errors)
                input#title(name='title' type='text' value=`${title}`)
            else            
                input#title(name='title' type='text')
        p
            label(for='author') Author
            if(errors)
                input#author(name='author' type='text' value=`${author}`)
            else
                input#author(name='author' type='text')
        p
            label(for='genre') Genre
            if(errors)
                input#genre(name='genre' type='text' value=`${genre}`)
            else
                input#genre(name='genre' type='text')    
        p
            label(for='year') Year
            if(errors)
                input#year(name='year' type='text' value=`${year}`)
            else
                input#year(name='year' type='text')
        p
            input(type='submit' value='Create New Book')
        p
            a.button(href='/books') Cancel